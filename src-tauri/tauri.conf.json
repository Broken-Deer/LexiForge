{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LexiForge",
  "version": "0.1.0",
  "identifier": "com.lexiforge.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LexiForge",
        "width": 680,
        "height": 540,
        "focus": true,
        "transparent": true,
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "shadow": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    }
  }
}
